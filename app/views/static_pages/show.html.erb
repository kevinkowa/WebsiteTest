<!-- Page Content -->
    <div class="container">

      <div class="row">

        <!-- Post Content Column -->
        <div class="col-lg-8">

          <!-- Title -->
          <h1 class="mt-4"><%= @post.title%></h1>

          <!-- Author -->
          <p class="lead">
            by
            <a href="#"><%= @post.author%></a>
          </p>

          <hr>


          <!-- Post Content -->
          <p class="lead"><%= simple_format(@post.content, {}, wrapper_tag: 'div') %></p>  

        </div>

      </div>
      <!-- /.row -->

    </div>
    <!-- /.container -->